{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULTS", ".env*"],
            "outputs": [".next/**", "!.next/cache/**"]
        },
        "test": {
            "dependsOn": ["^test"],
            "cache": false
        },
        "test:coverage": {
            "dependsOn": ["^test:coverage"],
            "cache": false
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "format": {
            "dependsOn": ["^format"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}